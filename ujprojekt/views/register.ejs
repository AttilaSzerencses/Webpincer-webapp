<form action="/register" method="post">
    <div class="box">
        <table class="logintable">
            <tbody>
            <tr>
                <td><h1>Regisztráció<h2></td>
                <ul>
                    <% if(typeof errors != "undefined"){ 
					for(let i=0;i<errors.length;i++){
					%>
                    <li><%= errors[i].message %></li>
					<%}
					}
					%> 
                </ul>
            </tr>
            <tr>
                <td><input type="text" id="name" name="name" placeholder="Név" required></td>
            </tr>
            <tr>
                <td><input type="email" id="email" name="email" placeholder="E-mail cím" required></td>
            </tr>
            <tr>
                <td><input type="password" id="pw" name="password" placeholder="Jelszó" required></td>
            </tr>
            <tr>
                <td><input type="text" id="phone" name="phone" placeholder="Telefonszám" required></td>
            </tr>
            <tr>
                <td><input type="number" id="postcode" name="postcode" placeholder="Irányítószám" required><input type="text" id="city" name="city" placeholder="Város"></td>
            </tr>
            <tr>
                <td><input type="text" id="street" name="street" placeholder="Utca" required><input type="number" id="streetnumber" name="streetnumber" placeholder="Szám" required><input type="text" id="other" name="other" placeholder="Cím maradék"></td>
            </tr>

            <tr>
                <td><input type="submit" value="Regiszráció"></td>
            </tr>
            <tr>
                <td><a href="/login">Már van fiókod? Jelentkezz be!</a></td>
            </tr>
            <tr>
                <td>&nbsp;</td>
            </tr>

            </tbody>
        </table>
    </div>
</form>
