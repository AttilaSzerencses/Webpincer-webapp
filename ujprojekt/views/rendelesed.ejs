<%

let orderedFood;
let restaurantUser;
for(order of orders){
	if(order.u_id===authUser.id){
		for(const food of foods){
			if(order.fid===food.id){
				orderedFood=food;
				break;
			}
		}
		for(const user of users){
			if(orderedFood.u_id===user.id){
				restaurantUser=user;
				break;
			}
		}
		%><p>Étterem: <%=restaurantUser.name%> | Étel: <%=orderedFood.foodname%> | Ár: <%=order.sumprice%> | Állapot: <% if(order.cdone==="done" && order.rdone==="done"){%>Átadva<%}else if(order.rdone==="done"){%>Kiszállítás alatt<%} else {%>Készítés alatt<%}%></p> 
